<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#026467"
    tools:context=".teacherView.HomePageTeacherActivity">


    <Button
        android:id="@+id/buttonCreateProjects"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#E5F5EA"
        android:text="@string/create_projects"
        android:textColor="#596392"
        app:layout_constraintBottom_toTopOf="@+id/buttonProjects"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonProjects"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#E5F5EA"
        android:text="@string/projects"
        android:textColor="#596392"
        app:layout_constraintBottom_toTopOf="@+id/cardView4"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewEvaL360"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:text="Home page teacher"
        android:textColor="#F9F9F9"
        android:textSize="40sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="412dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            app:srcCompat="@drawable/logo" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>